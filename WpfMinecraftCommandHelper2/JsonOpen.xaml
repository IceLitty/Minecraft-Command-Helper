        <Button x:Name="AdventureBtn" Content="Adventure&#xA;进度/成就表" HorizontalAlignment="Left" Margin="116,10,0,0" VerticalAlignment="Top" Width="101" Style="{DynamicResource SquareButtonStyle}" Height="101" Click="AdventureBtn_Click"/>
        <Button x:Name="RecipeBtn" Content="Recipe&#xA;合成表" HorizontalAlignment="Left" Margin="222,10,0,0" VerticalAlignment="Top" Width="101" Style="{DynamicResource SquareButtonStyle}" Height="101" Click="RecipeBtn_Click"/>
    </Grid>
